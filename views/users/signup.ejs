     <style>
         html {
             margin: 0;
             padding: 0;
             background-color: #001D4A;
         }
 
         body {
             background-color:#001D4A;;
             font-family: "Nunito Sans", sans-serif;
             margin: 0 auto;
             display: flex;
             justify-content: center;
             align-items: center;
             height: 100vh;
             overflow: hidden;
         }
 
         .container {
             display: flex;
             flex-direction: row;
             background-color: #fff;
             box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
             border-radius: 10px;
             overflow: hidden;
             max-width: 900px;
             width: 100%;
             height: 70vh;
         }
 
         .form-section, .image-section {
             flex: 1;
             display: flex;
             justify-content: center;
             align-items: center;
         }
 
         .form-section {
             flex-direction: column;
             padding: 20px;
         }
 
         .form-label {
             display: block;
             margin-bottom: 8px;
             font-weight: 700;
             font-size: 16px;
             color: #001D4A;
         }
 
         .form-control {
             width: 100%;
             padding: 10px;
             margin-bottom: 20px;
             border: 1px solid #ced4da;
             border-radius: 5px;
         }
 
         .btn-success {
             background-color: #ECA400;
             color: #fff;
             padding: 10px 30px;
             border: none;
             border-radius: 5px;
             cursor: pointer;
         }
 
         .btn-success:hover {
             background-color: #006992;
         }
 
         .images {
             width: 100%;
             height: 100%;
             background: url("https://gentwenty.com/wp-content/uploads/2022/03/naassom-azevedo-Q_Sei-TqSlc-unsplash-scaled.jpg.webp") no-repeat center center;
             background-size: cover;
         }
 
         .text-center {
             text-align: center;
             font-family: "Nunito Sans", sans-serif;
         }
 
         .mb-3 {
             margin-bottom: 15px;
         }
 
         .mb-3 input, .mb-3 select {
             width: 100%;
             padding: 8px;
             margin-bottom: 16px;
             box-sizing: border-box;
             border: none;
             border-bottom: 2px solid #ECA400;
             border-radius: 4px;
             font-family: "Nunito Sans", sans-serif;
             font-style: normal;
             font-size: 16px;
         }
 
         .mb-3 select::-ms-expand {
             display: none;
         }
 
         .mb-3 select::-webkit-scrollbar {
             width: 12px;
         }
 
         .mb-3 select option {
             background-color: #fff;
             color: #ECA400;
         }
 
         .mb-3 select option:hover, select option:focus {
             background-color: #ECA400;
         }
 
         .mb-3 select:focus, select:hover {
             border-color: #ECA400;
         }
 
         /* Media Queries for responsiveness */
         @media screen and (max-width: 768px) {
             .container {
                 flex-direction: column;
                 height: auto;
             }
 
             .images {
                 height: 200px;
             }
 
             .form-section {
                 width: 90%;
             }
 
             .form-control, .mb-3 select {
                 width: 100%;
             }
         }
     </style>
 </head>
 
 <body>
     <div class="container">
         <div class="image-section">
             <div class="images"></div>
         </div>
         <div class="form-section">
             <h2 class="text-center mb-4">SignUp for your account</h2>
             <form action="/signup" method="POST" novalidate class="needs-validation">
                 <div class="mb-3">
                     <label for="username" class="form-label">Username</label>
                     <input name="username" placeholder="Add a username" type="text" class="form-control" required />
                 </div>
                 <div class="mb-3">
                     <label for="email" class="form-label">Email</label>
                     <input name="email" placeholder="Add an email" type="email" class="form-control" required />
                 </div>
                 <div class="mb-3">
                     <label for="password" class="form-label">Password</label>
                     <input name="password" placeholder="Add a password" type="password" class="form-control" required />
                 </div>
                 <div class="mb-3">
                     <label for="role" class="form-label">Role</label>
                     <select name="role" id="roleSelect" class="form-select" required>
                         <option value="" selected disabled>Select a role</option>
                         <option value="student">Student</option>
                         <option value="committee">Committee</option>
                         <option value="faculty">Faculty</option>
                     </select>
                 </div>
                 <div id="committeeIdField" class="mb-3" style="display: none;">
                     <label for="committee" class="form-label">Select Committee</label>
                     <select id="committee" name="committee" required>
                         <!-- Here, add JavaScript logic to populate options dynamically -->
                         <% committees.forEach(committee => { %>
                             <option value="<%= committee._id %>"><%= committee.name %></option>
                         <% }) %>
                     </select>
                 </div>
                 <div class="text-center">
                     <button type="submit" class="btn btn-success">SignUp</button>
                 </div>
             </form>
         </div>
     </div>
 
     <script>
         const roleSelect = document.getElementById('roleSelect');
         const committeeIdField = document.getElementById('committeeIdField');
         roleSelect.addEventListener('change', () => {
             if (roleSelect.value === 'committee') {
                 committeeIdField.style.display = 'block';
             } else {
                 committeeIdField.style.display = 'none';
             }
         });
     </script>
 </body>
 
