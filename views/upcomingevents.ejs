<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CALENDAR</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;700&display=swap');

        *, *:before, *:after {
            box-sizing: border-box;
            font-family: 'Noto Sans', sans-serif;
        }

        html {
            font-size: 62.5%;
        }

        * {
            padding: 0;
            margin: 0;
        }

        body {
            background-color: #0e0e0e;
            color: #EAF8BF;
            font-size: 1.6rem;
            line-height: 1.4;
        }

        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            background: linear-gradient(90deg, #001D4A, #00C6FF);
            padding: 1rem 2rem;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            z-index: 1000;
            text-align: right;
            display: flex;
            justify-content: flex-end;
            align-items: center;
        }

        .navbar a {
            text-decoration: none;
            color: white;
            margin: 0 1.5rem;
            font-size: 1.5rem;
            transition: color 0.3s ease, transform 0.3s ease;
        }

        .navbar a:hover {
            color: #ffcc00;
            transform: scale(1.1);
        }

        .card-filter {
            width: 80%;
            margin: 0 auto;
            padding-top: 8rem;
        }

        .filters {
            display: flex;
            justify-content: center;
            margin-bottom: 3rem;
        }

        .filters ul {
            display: flex;
            justify-content: center;
            gap: 2rem;
            flex-wrap: wrap;
        }

        .btn-list {
            appearance: none;
            background-color: #27476E;
            border: none;
            border-radius: 4px;
            color: #fff;
            cursor: pointer;
            display: inline-flex;
            align-items: center;
            justify-content: center;
            padding: 1rem 2rem;
            font-size: 1.6rem;
            text-transform: uppercase;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        .btn-list:hover,
        .btn-list.active {
            background-color: #406dd5;
            transform: translateY(-2px);
        }

        .filters-content {
            display: flex;
            justify-content: center;
        }

        .grid {
            display: flex;
            flex-wrap: wrap;
            gap: 3rem;
            width: 100%;
            justify-content: center;
        }

        .card-body {
            background-color: #006992;
            border-radius: 1rem;
            overflow: hidden;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease;
            width: calc(33.33% - 4.8rem);
            margin: 2.4rem;
        }

        .card-body:hover {
            transform: translateY(-1rem);
        }

        .card-image img {
            width: 100%;
            height: 20rem;
            object-fit: cover;
        }

        .card-content {
            padding: 2rem;
        }

        .card-content p {
            margin: 1rem 0;
        }

        .card-title {
            font-size: 2rem;
            font-weight: 700;
        }

        .card-desc {
            font-size: 1.4rem;
            font-weight: 400;
        }

        .card-date {
            font-size: 1.9rem;
            font-weight: 400;
            color: #B8E1FF;
        }

        .btn-register {
            display: block;
            width: 100%;
            background-color: #27476E;
            color: #fff;
            padding: 1rem 0;
            text-align: center;
            text-decoration: none;
            border: none;
            border-radius: 0 0 1rem 1rem;
            transition: background-color 0.3s ease;
        }

        .btn-register:hover {
            background-color: #406dd5;
        }

        @media screen and (max-width: 1200px) {
            .navbar a {
                font-size: 1.6rem;
                margin: 0 0.5rem;
            }

            .btn-list {
                font-size: 1.4rem;
                padding: 0.8rem 1.6rem;
            }

            .card-body {
                width: calc(50% - 4.8rem);
                max-width: none;
            }

            .card-title {
                font-size: 1.8rem;
            }

            .card-desc, .card-date {
                font-size: 1.3rem;
            }

            .btn-register {
                font-size: 1.4rem;
            }
        }

        @media screen and (max-width: 998px) {
            .filters ul {
                gap: 1rem;
            }

            .grid {
                gap: 2rem;
            }

            .card-body {
                width: calc(50% - 3.5rem);
            }

            .card-title {
                font-size: 1.6rem;
            }

            .card-desc, .card-date {
                font-size: 1.2rem;
            }

            .btn-register {
                font-size: 1.2rem;
            }
        }

        @media screen and (max-width: 768px) {
            .card-filter {
                width: 90%;
                padding-top: 6rem;
            }

            .navbar a {
                font-size: 1.4rem;
                margin: 0 0.5rem;
            }

            .btn-list {
                font-size: 1.2rem;
                padding: 0.6rem 1.2rem;
            }

            .grid {
                gap: 1.5rem;
            }

            .card-body {
                width: calc(50% - 2.4rem);
            }

            .card-title {
                font-size: 1.4rem;
            }

            .card-desc, .card-date {
                font-size: 1.1rem;
            }

            .btn-register {
                font-size: 1.1rem;
            }
        }

        @media screen and (max-width: 576px) {
            .navbar {
                text-align: center;
            }

            .navbar a {
                display: block;
                margin: 0.5rem 0;
                font-size: 1.6rem;
            }

            .filters ul {
                gap: 0.5rem;
            }

            .btn-list {
                font-size: 1rem;
                padding: 0.4rem 1rem;
            }

            .grid {
                gap: 1rem;
            }

            .card-body {
                width: calc(100% - 2rem);
                margin: 1.5rem 0;
            }

            .card-title {
                font-size: 1.4rem;
            }

            .card-desc, .card-date {
                font-size: 1rem;
            }

            .btn-register {
                font-size: 1rem;
            }
        }
    </style>
</head>
<body>
<div class="navbar">
    <a href="/dashboard/student">Go Back</a>
</div>
<section class="card-filter">
    <div class="filters">
        <ul>
            <li class="btn-list active" role="button" data-filter="*">All</li>
            <% committees.forEach(committee => { %>
                <li class="btn-list" data-filter=".<%= committee._id %>"><%= committee.name %></li>
            <% }); %>
        </ul>
    </div>
    
    <div class="filters-content">
        <div class="row grid">
            <% events.forEach(event => { %>
                <% const committee = committees.find(c => c._id.toString() === event.committee_id.toString()); %>
                <div class="card-body item <%= committee._id %>">
                    <div class="card-image">
                        <img src="<%= event.image.url %>" alt="<%= event.name %>">
                    </div>
                    <div class="card-content">
                        <p class="card-title"><%= event.name %></p>
                        <p class="card-desc"><%= event.description %></p>
                        <p class="card-date"><%= new Date(event.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></p>
                        <p class="card-committee">Committee: <%= committee.name %></p>
                    </div>
                    <a href="/student/registration"><button class="btn-register">Register</button></a>
                </div>
            <% }) %>
        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.6.3.min.js" integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=" crossorigin="anonymous"></script>
<script src="https://unpkg.com/isotope-layout@3/dist/isotope.pkgd.js"></script>
<script>
    var $grid = $(".grid").isotope({
        itemSelector: ".item",
        percentPosition: true,
        layoutMode: "fitRows",
    });

    function filterEvents(committeeName) {
        $grid.isotope({
            filter: committeeName,
        });
    }

    $(".filters ul li").click(function () {
        $(".filters ul li").removeClass("active");
        $(this).addClass("active");

        var committeeName = $(this).attr("data-filter");
        filterEvents(committeeName);
    });
</script>
</body>
</html>
