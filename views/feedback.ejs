<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Feedback Form</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:ital,opsz,wght@0,6..12,200..1000;1,6..12,200..1000&family=Ubuntu:ital,wght@0,300;0,400;0,500;0,700;1,300;1,400;1,500;1,700&display=swap" rel="stylesheet">
  <style>
   body {
  font-family: Arial, sans-serif;
  background-color: #001D4A;
  margin: 0;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  overflow: hidden;
}

form {
  max-width: 90%;
  margin: 0 auto;
  background-color: #fff;
  padding: 20px;
  border-radius: 8px;
  box-shadow: 5px 4px 10px rgba(0, 0, 0, 0.6);
  animation: slideDown 0.5s ease-out;
}

@media screen and (min-width: 768px) {
  form {
    max-width: 500px; /* Adjust maximum width for larger screens */
  }
}

form h2 {
  font-family: "Ubuntu", sans-serif;
  font-weight: 700;
  font-style: normal;
  font-size: 30px;
  text-align: center;
}

label {
  display: block;
  margin-bottom: 8px;
  font-family: "Nunito Sans", sans-serif;
  font-weight: 700;
  font-style: normal;
  font-size: 18px;
}

input, select, textarea {
  width: 100%;
  padding: 5px;
  margin-bottom: 10px;
  box-sizing: border-box;
  border: 2px solid #001D4A;
  border-radius: 4px;
  font-family: "Nunito Sans", sans-serif;
  font-style: normal;
  font-size: 18px;
  transition: all 0.3s ease;
}

input:focus, select:focus, textarea:focus {
  border-color: #006992;
  outline: none;
}

button {
  background-color: #001D4A;
  color: #fff;
  padding: 10px 25px;
  border: none;
  border-radius: 4px;
  cursor: pointer;
  display: block;
  margin: 0 auto;
  font-size: 18px;
  transition: background-color 0.3s ease;
}

button:hover {
  background-color: #006992;
}

.rating-box {
  background: #fff;
  padding: 25px 50px 35px;
  border-radius: 25px;
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.05);
  margin-bottom: 16px;
}

.rating-box header {
  font-size: 22px;
  color: #001D4A;
  font-weight: 500;
  margin-bottom: 20px;
  text-align: center;
}

.rating-box .stars, .rating-box .rating {
  display: flex;
  align-items: center;
  gap: 25px;
  justify-content: center;
}

.stars i, .rating i {
  color: #e6e6e6;
  font-size: 35px;
  cursor: pointer;
  transition: color 0.2s ease;
}

.stars i.active, .rating i.active {
  color: #ff9c1a;
}

.home-icon {
  text-align: center;
  padding: 20px;
  font-size: 24px;
  color: #fff;
  cursor: pointer;
  position: absolute;
  top: 20px;
  left: 20px;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 50%;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.home-icon a {
  color: #fff;
  text-decoration: none;
}

  </style>
</head>
<body>
  <form action="/submit-feedback" method="POST">
    <h2>FEEDBACK FORM</h2>
    <p style="text-align: center;">Fill this form to let us know how we can improve</p>
    <input type="text" id="name" placeholder="Enter your name" required name="name">
    <input type="email" id="email" placeholder="Enter Email-ID" required name="email">
    <input type="tel" id="phone" placeholder="Enter your number" required name="phone">
    <div class="rating-box">
      <header>Rate the venue and facilities</header>
      <div class="stars">
        <i class="fa-solid fa-star"></i>
        <i class="fa-solid fa-star"></i>
        <i class="fa-solid fa-star"></i>
        <i class="fa-solid fa-star"></i>
        <i class="fa-solid fa-star"></i>
      </div>
      <input type="hidden" name="venueRating" id="venueRating" required>
    </div>
    <div class="rating-box">
      <header>How would you rate your overall experience at the event?</header>
      <div class="rating">
        <i class="fa-solid fa-star"></i>
        <i class="fa-solid fa-star"></i>
        <i class="fa-solid fa-star"></i>
        <i class="fa-solid fa-star"></i>
        <i class="fa-solid fa-star"></i>
      </div>
      <input type="hidden" name="eventExperienceRating" id="eventExperienceRating" required>
    </div>
    <textarea id="description" name="description" placeholder="Enter your description" rows="4" required></textarea>
    <label for="event">Select Event:</label>
    <select id="event" name="event_id" required>
      <!-- Populate options dynamically with events from the database -->
      <% events.forEach(event => { %>
        <option value="<%= event._id %>"><%= event.name %></option>
      <% }) %>
    </select>
    <button type="submit">Submit Request</button>
  </form>
  <div class="home-icon">
    <a href="/dashboard/student">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-house"
            viewBox="0 0 16 16">
            <path
                d="M0 5.5l8-6.973 8 6.973v8.527a.5.5 0 0 1-1 0V8h-2v7a1 1 0 0 1-1 1h-1a1 1 0 0 1-1-1V9H5v7a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V5.5zm1.854-.353L8 1.793l6.146 3.354a.5.5 0 0 1 .18.684l-1.05 2.631a2 2 0
                0 1 0 1 1.461 1.296l.365.037a1 1 0 0 0 .773.639l.895 2.238a.5.5 0 0 1 .952 0l.895-2.237a1 1 0 0 0 .773-.64l.365-.036a2 2 0 0 1 1.46-1.297l1.05-2.63a.5.5 0 0 1 .18-.684z" />
        </svg>
    </a>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW"
    crossorigin="anonymous"></script>
  <script>
    const stars = document.querySelectorAll(".stars i");
    stars.forEach((star, index1) => {
      star.addEventListener("click", () => {
        stars.forEach((star, index2) => {
          index1 >= index2 ? star.classList.add("active") : star.classList.remove("active");
        });
        document.getElementById("venueRating").value = index1 + 1;
      });
    });
    const rating = document.querySelectorAll(".rating i");
    rating.forEach((star, index1) => {
      star.addEventListener("click", () => {
        rating.forEach((star, index2) => {
          index1 >= index2 ? star.classList.add("active") : star.classList.remove("active");
        });
        document.getElementById("eventExperienceRating").value = index1 + 1;
      });
    });
  </script>
</body>
</html>
